<div style="display: flex; gap: 1rem; padding: 1rem; box-sizing: border-box;">
  <div style="position: relative; display: flex, flex-direction: column; justify-content: space-between; flex: 1; height: 80vh; position: sticky; top: 0; width: 100%; flex-shrink: 0; overflow-y: auto; border: 1px solid #ccc; padding: 1rem; border-radius: 0.5rem;"w>
    <%= turbo_frame_tag "streams_panel", src: streams_path, loading: :eager do %>
      <p>Loading streams...</p>
    <% end %>

    <div style="position: absolute; bottom: 2px; flex: 1; overflow-y: auto; border: 1px solid #ccc; padding: 1rem; border-radius: 0.5rem;">
      <%= turbo_frame_tag "stashes_panel", src: stashed_index_path, loading: :eager do %>
        <p>Loading stashed cards...</p>
      <% end %>
    </div>
  </div>

  <div style="flex: 2; height: 100%; width: 100%; flex-shrink: 0; padding: 1rem; border-radius: 0.5rem;">
    <%= turbo_frame_tag "cards_panel", src: cards_path, loading: :eager do %>
      <p>Loading cards...</p>
    <% end %>
  </div>

  <div style="flex: 1; display: flex; flex-direction: column; gap: 1rem; height: 50vh; position: sticky; top: 0; width: 100%; flex-shrink: 0;">

    <div style="flex: 1; overflow-y: auto; border: 1px solid #ccc; padding: 1rem; border-radius: 0.5rem;">
      <%= turbo_frame_tag "calendar_panel", src: calendar_path, loading: :eager do %>
        <p>Loading calendar...</p>
      <% end %>
    </div>
  </div>
</div>
